{
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules/**/*" ],

  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",

    "esModuleInterop": true,
    "moduleResolution": "node",

    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "src",
    "paths": {
      ":commands/*": [ "commands/*" ],
      ":data/*": [ "data/*" ],
      ":events/*": [ "events/*" ],
      ":interfaces/*": [ "interfaces/*" ],
      ":util/*": [ "util/*" ]
    }
  },

  "ts-node": {
    "esm": true,
    "require": [ "tsconfig-paths/register" ]
  },

  "tsc-alias": {
    "resolveFullPaths": true
  }
}
